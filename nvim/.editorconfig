root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[{*.groovy,*Jenkinsfile*,*.py,*gradle*}]
indent_size = 4
tab_width = 4

[README.md]
insert_final_newline = true
